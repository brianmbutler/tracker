{{#paper-nav-container open=drawerOpen classNames="ember-app" }}

  {{#paper-sidenav classNames="md-sidenav-left md-whiteframe-z2" flex-layout="column" flex=true}}

    {{#paper-toolbar}}
      <div class="md-toolbar-tools">
        {{#link-to 'index'}}
          <img src="sd-logo.png" height="48">
        {{/link-to}}
      </div>
      {{#link-to 'employee-new'}}New Employee{{/link-to}}
      {{#link-to 'employee-list'}}Employee List{{/link-to}}

      {{#paper-button raised=true action="login" }}Login{{/paper-button}}
      {{#paper-button raised=true classNames="md-warn" action="sign-up" }}Sign-up{{/paper-button}}
    {{/paper-toolbar}}


    {{#paper-content}}
      <nav class="sidenav">

        <ul>
          <li>
            {{#link-to 'dashboard'}}Dashboard{{/link-to}}
          </li>
          <li>
            {{#link-to 'employee-new'}}New Employee{{/link-to}}
          </li>
          <li>
            {{#link-to 'employee-list'}}Show Employees{{/link-to}}
          </li>
        </ul>
      </nav>
    {{/paper-content}}

  {{/paper-sidenav}}
  {{/paper-nav-container}}

  {{#paper-content flex-layout="column" flex=true}}
    {{outlet}}
  {{/paper-content}}




